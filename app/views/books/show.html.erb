
<div class="container">

  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user_profile', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class="col-xs-9">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <!--ここ引数間違ってた！-->
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @savedbook.title, book_path(@savedbook) %></td>
            <td><%= @savedbook.body %></td>

            <% if @savedbook.user.id === current_user.id %>
              <td><%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@savedbook), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>








