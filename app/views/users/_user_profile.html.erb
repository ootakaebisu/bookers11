<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br>

<table class="table">
  <tbody>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>

    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

<div class="row">
  <% if @user.id === current_user.id %>
    <%= link_to "", edit_user_path(@user), class: "btn btn-default col-xs-12 glyphicon glyphicon-wrench" %>
  <% else %>
    <%= link_to "", user_path(current_user), class: "btn btn-default col-xs-12 glyphicon glyphicon-wrench" %>
  <% end %>
</div>